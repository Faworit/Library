<?xml version="1.0" encoding="UTF-8"?>
<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>LibraryController</servlet-name>
    <servlet-class>com.epam.library.controller.LibraryController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.jpg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.png</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LibraryController</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>FilterEncoding</filter-name>
    <filter-class>com.epam.library.filter.FilterEncoding</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FilterEncoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>FilterLanguage</filter-name>
    <filter-class>com.epam.library.filter.FilterLanguage</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FilterLanguage</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <locale-config>
    <default-locale>ru</default-locale>
    <supported-locale>en</supported-locale>
  </locale-config>
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Jsp Folder</web-resource-name>
      <url-pattern>/jsp/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>reader</role-name>
      <role-name>librarian</role-name>
    </auth-constraint>
  </security-constraint>
</web-app>
